<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RacketStringManager.View.DataManagementView"
             xmlns:res="clr-namespace:RacketStringManager.Resources"
             Title="DataManagementView">
    <VerticalStackLayout>
        <Label 
            Text="{x:Static res:AppRes.DataManagement_Description}"
            VerticalOptions="Center" Margin="10"
            HorizontalOptions="Center" />

        <Button Margin="5" Command="{Binding ExportDatabaseCommand}" Text="{x:Static res:AppRes.DataManagement_ExportButtonText}"></Button>
        <Button Margin="5" Command="{Binding ImportDatabaseCommand}" Text="{x:Static res:AppRes.DataManagement_ImportButtonText}"></Button>
    </VerticalStackLayout>
</ContentPage>